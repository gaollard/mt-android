<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".fragment.MyFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">
        <!--标题-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="45dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_centerInParent="true"
                android:text="发布需求"/>
            <RelativeLayout
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:background="#ebedf0" />
        </RelativeLayout>
        <!--滚动容器-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--标题-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@null"
                        android:hint="标题(搜索的关键词)"
                        android:textColor="#000000"
                        android:textColorHint="#bcbcbc"
                        android:textSize="18sp" />
                </RelativeLayout>
                <!--悬赏金额-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/reward"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@null"
                        android:hint="悬赏金额"
                        android:textColor="#000000"
                        android:textColorHint="#bcbcbc"
                        android:textSize="18sp" />
                </RelativeLayout>
                <!--要求-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/skill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@null"
                        android:hint="您对竞标者的要求"
                        android:textColor="#000000"
                        android:textColorHint="#bcbcbc"
                        android:textSize="18sp" />
                </RelativeLayout>
                <!--需求描述-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@null"
                        android:hint="需求描述"
                        android:textColor="#000000"
                        android:textColorHint="#bcbcbc"
                        android:textSize="18sp" />
                </RelativeLayout>
                <!--选择应用类型-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/project_type_value"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@null"
                        android:hint="选择项目类型"
                        android:textColor="#000000"
                        android:textColorHint="#bcbcbc"
                        android:textSize="18sp" />
                    <ImageView
                        android:id="@+id/choose_project_type"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_skin"
                        />
                    /Button>
                </LinearLayout>
                <!--选择城市-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/city_value"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@null"
                        android:hint="项目所在城市"
                        android:textColor="#000000"
                        android:textColorHint="#bcbcbc"
                        android:textSize="18sp" />
                    <ImageView
                        android:id="@+id/choose_city"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_skin" />
                    /Button>
                </LinearLayout>
                <Button
                    android:id="@+id/btn_sbt"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="80dp"
                    android:gravity="center"
                    android:text="提交"
                    android:textColor="#fff"
                    android:background="#615963"
                    android:textSize="18sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>